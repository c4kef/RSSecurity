<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="RFDesign.Pages.SEPage">
  <StackPanel Margin="{StaticResource PageMargin}" Background="Transparent"
              Orientation="Horizontal"
              Spacing="40">
    <StackPanel.Styles>
      <Style Selector="TextBlock.header">
        <Setter Property="Margin" Value="0 30 0 20" />
      </Style>
    </StackPanel.Styles>
    <StackPanel>
      <TextBlock Text="Основное" Classes="header" />
      <CheckBox Content="Состояние" IsChecked="{Binding IsSEEnabled}" Margin="0,8,0,0"/>
      <ComboBox SelectedIndex="{Binding IsSEEnabled}" SelectionChanged="SEPTypeChanged" HorizontalAlignment="Stretch" IsEnabled="{Binding IsSEEnabled}" Margin="0,20,0,0">
        <ComboBoxItem>Targeted</ComboBoxItem>
        <ComboBoxItem>Strict</ComboBoxItem>
        <ComboBoxItem>Mls</ComboBoxItem>
      </ComboBox>
    </StackPanel>
    <StackPanel>
      <TextBlock Text="Редактирование контекста (скоро)" Classes="header" />
    </StackPanel>
    <StackPanel>
      <TextBlock Text="Флаги (скоро)" Classes="header" />
    </StackPanel>
  </StackPanel>

</UserControl>
